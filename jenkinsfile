pipeline {
    agent any
    environment {
        registry = "public.ecr.aws/u5f8b1u3/petdemo"
    }
   
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/saamrajepatil/spring-petclinic']]])     
            }
        }
      stage ('Build') {
          steps {
            script {
                sh './mvnw clean package -Dmaven.test.skip=true'
            }           
        }
      }
    // Building Docker images
    stage('Building image') {
      steps{
        script {
          sh 'docker build -t petdemo .'
          sh 'docker tag petdemo:latest public.ecr.aws/u5f8b1u3/petdemo:latest'
        }
      }
    }
   
    // Uploading Docker images into AWS ECR
    stage('Pushing to ECR') {
     steps{  
         script {
                sh 'aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/u5f8b1u3'
                sh 'docker push public.ecr.aws/u5f8b1u3/petdemo:latest'
         }
        }
      }

       stage('K8S Deploy') {
        steps{   
            script {
                withKubeConfig([credentialsId: 'K8S', serverUrl: 'https://7FCB9B94240722590C07A35A84643B8D.gr7.us-east-1.eks.amazonaws.com']) {
                sh ('kubectl apply -f  eks-deploy-k8s.yaml')
                }
            }
        }
       }
    }
}
